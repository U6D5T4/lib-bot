<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets async="true">
		<default-target-parameters xsi:type="File" keepFileOpen="false"/>
		<target xsi:type="File" name="fatalErrors" fileName="${basedir}\logs\critical-errors\${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|$Message: {message}${newline}${exception:format=tostring}" />

		<target xsi:type="File" name="errors" fileName="${basedir}\logs\errors\${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|Message: ${message}${newline}${exception:format=tostring}" />

		<target xsi:type="File" name="warnings" fileName="${basedir}\logs\warnings\${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|Message: ${message}${newline}" />

		<target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--Output hosting lifetime messages to console target for faster startup detection -->
		<logger name="*" minlevel="Info" writeTo="lifetimeConsole"/>

		<!--All fatal logs-->
		<logger name="*" minlevel="Fatal" writeTo="fatalErrors" final="true"/>

		<!--All error logs-->
		<logger name="*" level="Error" writeTo="errors" final="true"/>

		<!--All warning logs-->
		<logger name="*" level="Warn" writeTo="warnings" final="true"/>
		
	</rules>
</nlog>